{% set title = "Zoekresultaten voor: " ~ (search |trim) %}
{% extends 'partials/master.twig' %}

{% if records[0].image is not empty %}
    {% set image = records[0].image %}
    {% set imageCredits = records[0].imagecredits %}
{% endif %}

{% block main %}
    <div class="listing">
        {% for record in records %}
            {{ include("partials/listing_item.twig") }}
        {% else %}
            <div class="noResults">
                Helaas er is niets gevonden voor "{{ search |trim }}"
            </div>
        {% endfor %}
    </div>

    {{ pager(template = 'partials/pagination.twig') }}
{% endblock main %}