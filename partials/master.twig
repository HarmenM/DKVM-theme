{%- if title is empty -%}
{% set title = app.config.get('general/sitename') -%}
{%- endif -%}
<!doctype html>
<html lang="{{ htmllang() }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{{ app.config.get('general/sitename') }} | {{ title }}</title>
        <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />

        <link rel="stylesheet" href="{{ paths.theme }}css/style.css" media="screen">
        <link rel="stylesheet" href="{{ paths.theme }}css/print.css" media="print">
        {% if image is not empty %}
            <style>
                @media only screen and (max-device-width: 1280px) {
                    #headerImage { background-image: url('{{ image|thumbnail('cover-m') }}') }
                }

                @media only screen and (min-device-width: 1281px) and (max-device-width: 1680px) {
                    #headerImage { background-image: url('{{ image|thumbnail('cover-l') }}') }
                }

                @media only screen and (min-device-width: 1681px) {
                    #headerImage { background-image: url('{{ image|thumbnail('cover-xl') }}') }
                }

                {% if imageVerticalAlignment is not empty %}
                #headerImage { background-position-y: {{ imageVerticalAlignment }} }
                {% endif %}
            </style>
        {% endif %}

        <link rel="apple-touch-icon" sizes="180x180" href="{{ paths.theme }}/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" href="{{ paths.theme }}/favicons/favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="{{ paths.theme }}/favicons/favicon-194x194.png" sizes="194x194">
        <link rel="icon" type="image/png" href="{{ paths.theme }}/favicons/android-chrome-192x192.png" sizes="192x192">
        <link rel="icon" type="image/png" href="{{ paths.theme }}/favicons/favicon-16x16.png" sizes="16x16">
        <link rel="manifest" href="{{ paths.theme }}/favicons/manifest.json">
        <link rel="mask-icon" href="{{ paths.theme }}/favicons/safari-pinned-tab.svg" color="#2c5265">
        <meta name="msapplication-TileColor" content="#2b5797">
        <meta name="msapplication-TileImage" content="{{ paths.theme }}/favicons/mstile-144x144.png">
        <meta name="theme-color" content="#2c5265">

        {% block headincludes %}
        {% endblock headincludes %}
    </head>
    <body>
        {% block body %}
        <header>
            {{ include('partials/topbar.twig') }}
            {{ include('partials/header.twig') }}
        </header>

        <main class="container">
            <div class="inner">
                {% block main %}
                {% endblock main %}
            </div>
        </main>
        {% endblock body %}

        {{ include('partials/footer.twig') }}

        {% block bottomincludes %}
        {% endblock bottomincludes %}

        <script src="{{ paths.theme }}js/jquery-3.1.1.min.js"></script>
        <script src="{{ paths.theme }}js/tooltip.js"></script>
        <script src="{{ paths.theme }}js/script.js" type="text/javascript" async></script>

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-89627323-1', 'auto');
            ga('set', 'anonymizeIp', true);
            ga('send', 'pageview');

        </script>
    </body>
</html>
